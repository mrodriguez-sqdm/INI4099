	<tls:context name="TLS_Context" doc:name="TLS Context" doc:id="4f0afd27-38d0-4385-ba30-9ad6b684ddf0" >
		<tls:key-store type="${tls.type}" path="${tls.path}" keyPassword="${tls.keyPassword}" password="${tls.password}" />
	</tls:context>

</mule>
