<?xml version="1.0" encoding="UTF-8"?>

<mule xmlns:ee="http://www.mulesoft.org/schema/mule/ee/core" xmlns="http://www.mulesoft.org/schema/mule/core"
	xmlns:doc="http://www.mulesoft.org/schema/mule/documentation"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.mulesoft.org/schema/mule/core http://www.mulesoft.org/schema/mule/core/current/mule.xsd
http://www.mulesoft.org/schema/mule/ee/core http://www.mulesoft.org/schema/mule/ee/core/current/mule-ee.xsd">
	<sub-flow name="get-connectionNumber-orchestratorSub_Flow" doc:id="2345913e-549e-4c46-99fa-631fc07545ca" >
		<parse-template doc:name="Parse to XML" doc:id="c58f7c76-63fc-4a70-acdd-83e93acd3498" location="soap\schemas\templates\connectionNumberRequest.xml"/>
		<flow-ref doc:name="Go to Client" doc:id="06ac7539-65e2-4092-9d7c-e5bd3fc3a941" name="salesforce-clientSub_Flow"/>
		<ee:transform doc:name="Capture response body" doc:id="7593dbcd-10fd-4fe2-8744-7b5580e0d630" >
			<ee:message >
			</ee:message>
			<ee:variables >
				<ee:set-variable variableName="responseBody" ><![CDATA[%dw 2.0
output application/json
---
read(payload.Envelope.Body.ConexionNumberResponse.return, 'application/json')]]></ee:set-variable>
			</ee:variables>
		</ee:transform>
		<choice doc:name="Choice" doc:id="52ea4e31-16ea-47e7-b04e-17c49be92d82" >
			<when expression="vars.responseBody.service_particulars[0].error_code == null">
				<ee:transform doc:name="Prepare Output" doc:id="c1f9ff20-dd08-4550-a54a-3df3d0ce63fb" >
					<ee:message >
						<ee:set-payload ><![CDATA[%dw 2.0
output application/json
---
{
	"status": 200,
    "code": "accepted",
    "response": {
        "service_particulars": vars.responseBody.service_particulars,
        "transaction_number": vars.responseBody.numero_tramite
      }
}]]></ee:set-payload>
					</ee:message>
				</ee:transform>
			</when>
			<otherwise >
				<set-variable value="404" doc:name="httpStatus" doc:id="a8f7e0a3-27e4-4ce2-9357-b50295537254" variableName="httpStatus"/>
				<ee:transform doc:name="Prepare Output" doc:id="97a842c0-d554-4e9e-aa44-d3d2abe21adf" >
					<ee:message >
						<ee:set-payload ><![CDATA[%dw 2.0
output application/json
---
{
	"status": 404,
    "code": "NOT FOUND",
    "response": {
        "service_particulars": vars.responseBody.service_particulars,
        "transaction_number": vars.responseBody.numero_tramite
      }
}]]></ee:set-payload>
					</ee:message>
				</ee:transform>
			</otherwise>
		</choice>
	</sub-flow>
</mule>
