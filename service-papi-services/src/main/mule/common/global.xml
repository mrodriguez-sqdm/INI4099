		<http:request-connection protocol="${bot-sapi.protocol}" host="${bot-sapi.host}" port="${bot-sapi.port}" />
	</http:request-config>
	<import doc:name="Import" doc:id="2cf08d7c-5988-4f4e-8cb3-cf7f7abb2b5d" file="error-handler.xml" />
