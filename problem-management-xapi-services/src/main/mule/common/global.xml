http://www.mulesoft.org/schema/mule/http http://www.mulesoft.org/schema/mule/http/current/mule-http.xsd">
	 <http:listener-config name="problem-management-xapi-services-httpListenerConfig">
        <http:listener-connection host="0.0.0.0" port="${https.port}" protocol="HTTPS" tlsContext="TLS_Context"/>
    </http:listener-config>
    
    
    
    <apikit:config name="problem-management-xapi-services-config" api="problem-management-xapi-services.raml" outboundHeadersMapName="outboundHeaders" httpStatusVarName="httpStatus" />
	<import doc:name="Import" doc:id="a9b35d05-77de-4ad3-8194-ed493b53f4af" file="error-handler.xml" />
	<import doc:name="Import" doc:id="60e32217-5832-4a57-9967-c7c1b21ebf5b" file="etb-common-lib.xml" />
	<import doc:name="Import" doc:id="f12f7515-33f2-4e7c-b036-af3093a85766" file="loggin.xml" />
	<http:request-config name="HTTP_Request_configuration_problemManagement-papi" doc:name="HTTP Request configuration" doc:id="1268411b-b69d-4a90-8aaa-4a7cbcff2440" basePath="${problemManagement-papi.base-path}">
		<http:request-connection protocol="${problemManagement-papi.protocol}" host="${problemManagement-papi.host}" port="${problemManagement-papi.port}"/>
	</http:request-config>
	<configuration-properties doc:name="Configuration properties" doc:id="251aee81-24a9-48f0-81d6-b1f9e7ff02d0" file="${env}-properties.yaml" />
	<import doc:name="Import" doc:id="e4c46605-422c-4b50-86de-4b79a0136390" file="audits-sapi-client.xml" />
	<tls:context name="TLS_Context" doc:name="TLS Context" doc:id="1d8fd178-8151-4d1e-8881-f83c692bf2f1">
        <tls:key-store type="${tls.type}" path="${tls.path}" keyPassword="${tls.keyPassword}" password="${tls.password}" />
    </tls:context>
    <api-gateway:autodiscovery apiId="${autodiscovery}" ignoreBasePath="true" doc:name="API Autodiscovery" doc:id="7ffb059c-85de-4007-ac85-1f6d5df3f172" flowRef="problem-management-xapi-services-main" /> 
</mule>
