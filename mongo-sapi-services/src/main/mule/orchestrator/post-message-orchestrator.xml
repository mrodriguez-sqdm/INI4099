<?xml version="1.0" encoding="UTF-8"?>

<mule xmlns:ee="http://www.mulesoft.org/schema/mule/ee/core" xmlns="http://www.mulesoft.org/schema/mule/core"
	xmlns:doc="http://www.mulesoft.org/schema/mule/documentation"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.mulesoft.org/schema/mule/core http://www.mulesoft.org/schema/mule/core/current/mule.xsd
http://www.mulesoft.org/schema/mule/ee/core http://www.mulesoft.org/schema/mule/ee/core/current/mule-ee.xsd">
	<sub-flow name="post-message-orchestratorSub_Flow" doc:id="5a2f3ddb-4f6e-48b6-be44-1008a304f10b" >
		<flow-ref doc:name="Go to Client" doc:id="146686e5-bd86-4726-bdc5-53aac7331f98" name="post-message-clientSub_Flow"/>
		<ee:transform doc:name="map Response MongoDB" doc:id="44e47868-841a-45b6-b78e-d60b344e8d48" >
			<ee:message >
				<ee:set-payload ><![CDATA[%dw 2.0
output application/json
---
{
	codigo: if (payload."_id".. != null) 'OK' else "ERROR",
	descripcion: if(payload."_id".. != null) 'Mensaje Insertado' else "No se pudo insertar el mensaje"
}]]></ee:set-payload>
			</ee:message>
			<ee:variables >
				<ee:set-variable variableName="httpStatus" ><![CDATA[%dw 2.0
output application/json
---
if(payload."_id".. != null) 200 else 500]]></ee:set-variable>
			</ee:variables>
		</ee:transform>
	</sub-flow>
</mule>
