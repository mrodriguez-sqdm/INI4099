<?xml version="1.0" encoding="UTF-8"?>

<mule xmlns:ee="http://www.mulesoft.org/schema/mule/ee/core" xmlns="http://www.mulesoft.org/schema/mule/core"
	xmlns:doc="http://www.mulesoft.org/schema/mule/documentation"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.mulesoft.org/schema/mule/core http://www.mulesoft.org/schema/mule/core/current/mule.xsd
http://www.mulesoft.org/schema/mule/ee/core http://www.mulesoft.org/schema/mule/ee/core/current/mule-ee.xsd">
	<sub-flow name="get-billingAccount-orchestratorSub_Flow" doc:id="13ebcbd3-4686-4dce-a80c-9d49ab4682d1" >
		<flow-ref doc:name="Go to Client" doc:id="464df54a-1c5b-44c4-b38d-126602d96b11" name="get-billingAccount-clientSub_Flow"/>
		<ee:transform doc:name="Output" doc:id="2f82df58-8196-4293-a14f-09c71f4434a6" >
			<ee:message >
				<ee:set-payload ><![CDATA[%dw 2.0
var resultados = if(payload != []) payload map ($) - "_id" else null
var resultadoMsg= if(payload != []) "Positivo" else "Negativo"
var descMsg = if(payload != []) null else "No se encontro una cuenta de facturacion con el identificador insertado"
output application/json skipNullOn="everywhere"
---
{
    resultados: resultados,
    resultado: resultadoMsg,
    fecha: now(),
    descripcion: descMsg
}

]]></ee:set-payload>
			</ee:message>
		</ee:transform>
		<logger level="INFO" doc:name="Logger Output" doc:id="a987858e-4c20-4e50-938b-9aaae0fab7f6" message="#[payload]"/>
	</sub-flow>
</mule>
