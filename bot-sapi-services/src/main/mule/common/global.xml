http://www.mulesoft.org/schema/mule/http http://www.mulesoft.org/schema/mule/http/current/mule-http.xsd">
	<http:listener-config name="bot-sapi-services-httpListenerConfig">
        <http:listener-connection host="0.0.0.0" port="${http.private.port}" />
    </http:listener-config>
    <apikit:config name="bot-sapi-services-config" api="bot-sapi-services.raml" outboundHeadersMapName="outboundHeaders" httpStatusVarName="httpStatus" />
