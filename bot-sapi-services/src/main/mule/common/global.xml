	<http:request-config name="HTTP_Request_configuration_botServices" doc:name="HTTP Request configuration" doc:id="38fc9e72-36fc-4336-ab55-064979d6c496" basePath="${botServices.basepath}" responseTimeout="#[p('botServices.responseTimeout')]">
		<http:request-connection protocol="${botServices.protocol}" host="${botServices.host}" port="${botServices.port}" />
	</http:request-config>
	<import doc:name="Import" doc:id="ca098229-c31f-46b9-bbf0-c7cb18d60358" file="error-handler.xml" />
