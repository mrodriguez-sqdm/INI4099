#%RAML 1.0 DataType
type: object
displayName: geographicAddress
description: Geographic address response with complement patterns and related addresses
properties:
  Address:
    type: string
    required: true
    description: Dirección actual (Direccion_Actual)
    example: "AK 45 108A 50"
  city:
    type: string
    required: true
    description: Ciudad o municipio (Municipio)
    example: "Bogotá"
  geographicSubAddress:
    type: array
    required: false
    description: Sub-direcciones geográficas
    items:
      type: string
    example: []
  characteristic:
    type: array
    required: true
    description: Características de la dirección
    items:
      type: object
      properties:
        name:
          type: string
          required: true
          description: Nombre de la característica
          example: "complementPatterns"
        value:
          type: array
          required: true
          description: Valores de la característica
          items:
            type: string
          example: ["LC ###", "OF ###"]
    example:
      - name: "complementPatterns"
        value: ["LC ###", "OF ###"]
      - name: "relatedAddresses"
        value: [
          "AK 45 108A 50 LC 105",
          "AK 45 108A 50 OF 802",
          "AK 45 108A 50 OF 301"
        ]
