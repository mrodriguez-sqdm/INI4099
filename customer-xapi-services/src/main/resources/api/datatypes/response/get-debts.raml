#%RAML 1.0 DataType 
type: object
properties:
  codeResponse:
    type: string
    example: '200'
    required: false
  messageResponse:
    type: string
    example: succes
    required: false
  debt:
    type: object
    properties:
      adjust:
        type: object
        properties:
          date:
            type: date-only
            example: '2024-12-15'
            required: false
          numPqr:
            type: string
            example: PQR2024001234
            required: false
          origin:
            type: string
            example: Reclamo Cliente
            required: false
          value:
            type: object
            properties:
              value:
                type: integer
                example: -5000
                required: false
              valueStr:
                type: string
                example: '-$5,000.00'
                required: false
      barcode:
        type: string
        example: '12345678901234567890'
        required: false
      billedPeriod:
        type: string
        example: 2024-12
        required: false
      billingAccount:
        type: string
        example: '15052876387'
        required: false
      billingAddress:
        type: string
        example: 'Calle 123 #45-67, Bogotá'
        required: false
      billingCutoffDate:
        type: date-only
        example: '2024-12-15'
        required: false
      billingNumber:
        type: string
        example: FAC2024001234
        required: false
      billingNumberPse:
        type: string
        example: PSE2024001234
        required: false
      billingPhone:
        type: string
        example: '6013103732'
        required: false
      concepts:
        type: object
        properties:
          reconnected:
            type: object
            properties:
              cost:
                type: integer
                example: 15000
                required: false
              costUsr:
                type: string
                example: $15,000.00
                required: false
              date:
                type: date-only
                example: '2024-12-10'
                required: false
          suspend:
            type: object
            properties:
              cost:
                type: integer
                example: 10000
                required: false
              costUsr:
                type: string
                example: $10,000.00
                required: false
              date:
                type: date-only
                example: '2024-12-05'
                required: false
      deliveryType:
        type: string
        example: Digital
        required: false
      email:
        type: string
        example: cliente@email.com
        required: false
      extemporaneous:
        type: boolean
        example: false
        required: false
      informationValue:
        type: array
        items:
          type: object
          properties:
            date:
              type: date-only
              example: '2024-12-20'
              required: false
            message:
              type: string
              example: El valor a pagar incluye servicios adicionales del mes anterior
              required: false
      invoiceOrigin:
        type: string
        example: Sistema de Facturación
        required: false
      isReceiptOfPayment:
        type: boolean
        example: false
        required: false
      paydayLimit:
        type: date-only
        example: '2024-12-30'
        required: false
      payment:
        type: object
        properties:
          bank:
            type: string
            example: Bancolombia
            required: false
          paymentDate:
            type: date-only
            example: '2024-12-28'
            required: false
          type:
            type: string
            example: Digital
            required: false
          value:
            type: object
            properties:
              value:
                type: integer
                example: 125000
                required: false
              valueStr:
                type: string
                example: $125,000.00
                required: false
      paymentDate:
        type: date-only
        example: '2024-12-25'
        required: false
      phone:
        type: string
        example: '6013103732'
        required: false
      state:
        type: string
        example: Vencida
        required: false
      valueFinal:
        type: object
        properties:
          value:
            type: integer
            example: 125000
            required: false
          valueStr:
            type: string
            example: $125,000.00
            required: false
      valueOriginal:
        type: object
        properties:
          value:
            type: integer
            example: 125000
            required: false
          valueStr:
            type: string
            example: $125,000.00
            required: false
      valueService:
        type: object
        properties:
          value:
            type: integer
            example: 89000
            required: false
          valueStr:
            type: string
            example: $89,000.00
            required: false
