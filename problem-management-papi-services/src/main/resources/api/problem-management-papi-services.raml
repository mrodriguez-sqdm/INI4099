                application/json:
                  type: !include /datatypes/response/error.raml
            404:
              body:
                application/json:
                  type: !include /datatypes/response/error.raml
            405:
              body:
                application/json:
                  type: !include /datatypes/response/error.raml
            500:
              body:
                application/json:
                  type: !include /datatypes/response/error.raml
            501:
              body:
                application/json:
                  type: !include /datatypes/response/error.raml
            503:
              body:
                application/json:
                  type: !include /datatypes/response/error.raml
