description: This API exposes services to manage the orchestration of problem management.
protocols:
  - HTTPS

traits:
  tibcoHeaders: !include exchange_module/35a39a92-efa9-49b6-8f13-d66508fd2f35/tibcorequestheaders/1.0.6/tibcorequestheaders.raml
  security_client_id: !include exchange_module/35a39a92-efa9-49b6-8f13-d66508fd2f35/security-clientid/1.0.2/security-clientid.raml


mediaType: 
  - application/json


/serviceProblem:
  /pqr-orders:
    get:
        is: [security_client_id,tibcoHeaders]
        displayName: serviceProblem
        description: List or find ServiceProblem objects
        queryParameters:
          documentType:
            type: string
            enum: ["CC","CE","PASAPORTE","NIT","RUT","TI"]
            example: "CC"
          document:
            type: string
            maxLength: 30
            example: "12314235"
            pattern: ^[0-9]*$
        responses:
            200:
              body:
                application/json:
                  type: !include /datatypes/response/get-serviceProblem.raml
                  example: !include /examples/response/get-serviceProblem.json
            400:
              body:
                application/json:
                  type: !include /datatypes/response/error.raml
            401:
              body:
                application/json:
                  type: !include /datatypes/response/error.raml
            403:
