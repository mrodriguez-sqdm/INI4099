	<http:listener-config name="common-xapi-services-httpListenerConfig">
        <http:listener-connection host="0.0.0.0" port="${https.port}" readTimeout="${configurationTimeout.common-xapi-v2-listener}" tlsContext="TLS_Context" protocol="HTTPS"/>
    </http:listener-config>
    <http:request-config name="HTTP_Request_configuration_common-papi-services-v2" doc:name="HTTP Request configuration" doc:id="cfb2bacd-11eb-410c-a03a-3c1978ca63ed" basePath="${common-papi-v2.base-path}" responseTimeout="${configurationTimeout.common-papi-v2.responseTimeout}">
		<http:request-connection protocol="${common-papi-v2.protocol}" host="${common-papi-v2.host}" port="${common-papi-v2.port}" connectionIdleTimeout="${configurationTimeout.common-papi-v2.connectionIdleTimeout}"/>
	</http:request-config>
     <apikit:config name="common-xapi-services-config" api="common-xapi-services.raml" outboundHeadersMapName="outboundHeaders" httpStatusVarName="httpStatus" />
	<tls:context name="TLS_Context" doc:name="TLS Context" doc:id="4188e79d-f2b6-475b-b12d-a60c0de653f9" >
		<tls:key-store type="${tls.type}" path="${tls.path}" keyPassword="${tls.keyPassword}" password="${tls.keyPassword}" />
	</tls:context>
