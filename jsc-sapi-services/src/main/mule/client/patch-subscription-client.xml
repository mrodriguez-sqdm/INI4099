<?xml version="1.0" encoding="UTF-8"?>

<mule xmlns:ee="http://www.mulesoft.org/schema/mule/ee/core" xmlns:http="http://www.mulesoft.org/schema/mule/http"
	xmlns="http://www.mulesoft.org/schema/mule/core"
	xmlns:doc="http://www.mulesoft.org/schema/mule/documentation" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.mulesoft.org/schema/mule/core http://www.mulesoft.org/schema/mule/core/current/mule.xsd
http://www.mulesoft.org/schema/mule/http http://www.mulesoft.org/schema/mule/http/current/mule-http.xsd
http://www.mulesoft.org/schema/mule/ee/core http://www.mulesoft.org/schema/mule/ee/core/current/mule-ee.xsd">
	<sub-flow name="patch-subscription-clientSub_Flow" doc:id="6e2136fa-cf43-4001-83d7-ed3607537447" >
		<choice doc:name="Choice" doc:id="a2903ac3-7b67-4a1e-9dd1-b778d342a0a6" >
			<when expression="#[upper(attributes.queryParams.action) == p('jsc.action') or upper(attributes.queryParams.action) == p('jsc.action-change')]">
				<http:request method="PATCH" doc:name="Request to move billing account" doc:id="e7e13c20-a680-4190-a2e5-cc38ff9d4b78" config-ref="JSC_Request_configuration" path="${jsc.path.patch-moveBillingAccount}">
					<http:headers><![CDATA[#[output application/java
---
{
	Authorization : vars.token,
	"Content-Type" : "application/json"
}]]]></http:headers>
					<http:uri-params><![CDATA[#[output application/java
---
{
	subscriptionID : if (!isBlank(attributes.uriParams.subscriptionID))attributes.uriParams.subscriptionID else attributes.uriParams.subscription_id
}]]]></http:uri-params>
					<http:query-params><![CDATA[#[output application/java
---
{
	"action" : attributes.queryParams.action
}]]]></http:query-params>
				</http:request>
			</when>
			<when expression="#[attributes.queryParams.action == p('jsc.action-terminate')]">
				<ee:transform doc:name="Set empty payload" doc:id="383dc2bc-06f8-4945-9664-bb7e0a09aa76">
					<ee:message>
						<ee:set-payload><![CDATA[%dw 2.0
output application/json
---
{
}]]></ee:set-payload>
					</ee:message>
				</ee:transform>
				<http:request method="PATCH" doc:name="Request to terminate" doc:id="93463161-8454-4ec0-a7cc-033bdec1a465" config-ref="JSC_Request_configuration" path="${jsc.path.patch-moveBillingAccount}">
						<http:headers><![CDATA[#[output application/java
---
{
	Authorization : vars.token,
	"Content-Type" : "application/json"
}]]]></http:headers>
						<http:uri-params><![CDATA[#[output application/java
---
{
	subscriptionID : if (!isBlank(attributes.uriParams.subscriptionID))attributes.uriParams.subscriptionID else attributes.uriParams.subscription_id
}]]]></http:uri-params>
						<http:query-params><![CDATA[#[output application/java
---
{
	"action" : attributes.queryParams.action
}]]]></http:query-params>
					</http:request>
			</when>
			<otherwise >
				<http:request method="PATCH" doc:name="Request to add external id" doc:id="39433718-7e01-4bc5-8003-73f15e231333" config-ref="JSC_Request_configuration" path="${jsc.path.patch-addExternalId}">
					<http:headers><![CDATA[#[output application/java
---
{
	Authorization : vars.token
}]]]></http:headers>
					<http:uri-params><![CDATA[#[output application/java
---
{
	subscriptionID : if (!isBlank(attributes.uriParams.subscriptionID))attributes.uriParams.subscriptionID else attributes.uriParams.subscription_id
}]]]></http:uri-params>
				</http:request>
			</otherwise>
		</choice>
	</sub-flow>
	<sub-flow name="patch-subscription-features-clientSub_Flow" doc:id="01e127c0-b86a-4b7a-a845-68df0b96756f" >
		<http:request method="PATCH" doc:name="Request to patch subscriptionID-features" doc:id="89c5b899-293b-462e-a62a-385e08733d5a" config-ref="JSC_Request_configuration" path="${jsc.path.patch-subscription-msisdn}">
						<http:headers><![CDATA[#[output application/java
---
{
	Authorization : vars.token
}]]]></http:headers>
						<http:uri-params><![CDATA[#[output application/java
---
{
	subscriptionID : attributes.uriParams.subscriptionID
}]]]></http:uri-params>
					</http:request>
	</sub-flow>
</mule>
