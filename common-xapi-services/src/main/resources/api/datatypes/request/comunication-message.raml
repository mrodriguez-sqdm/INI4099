#%RAML 1.0 DataType 
type: object
properties:
  customer:
    type: object
    properties:
      documentType:
        type: string
        example: CC
        required: false
      documentNumber:
        type: string
        example: '123456789'
        required: false
      documentIssueDate:
        type: date-only
        example: '2015-09-01'
        required: false
      phone:
        type: string
        example: CUST001
        required: false
      address:
        type: string
        example: Calle 123 #45-67, Bogota
        required: false
  notification:
    type: object
    properties:
      email:
        type: string
        example: user@example.com
        required: false
      phoneNotification:
        type: string
        example: '3001234567'
        required: false
      pqr:
        type: string
        example: PQR12345
        required: false
  notificationType:
    type: string
    example: SIMCARD_REPLACEMENT
    required: false
  notificationMessage:
    type: string
    example: Your SIM card replacement request has been received
    required: false
