<?xml version="1.0" encoding="UTF-8"?>

<mule xmlns:mongo="http://www.mulesoft.org/schema/mule/mongo" xmlns:ee="http://www.mulesoft.org/schema/mule/ee/core"
	xmlns="http://www.mulesoft.org/schema/mule/core"
	xmlns:doc="http://www.mulesoft.org/schema/mule/documentation" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.mulesoft.org/schema/mule/core http://www.mulesoft.org/schema/mule/core/current/mule.xsd
http://www.mulesoft.org/schema/mule/ee/core http://www.mulesoft.org/schema/mule/ee/core/current/mule-ee.xsd
http://www.mulesoft.org/schema/mule/mongo http://www.mulesoft.org/schema/mule/mongo/current/mule-mongo.xsd">
	<sub-flow name="get-parameters-clientSub_Flow" doc:id="dd6c740d-c431-4a4e-b5db-e14ea48e41f3" >
		<try doc:name="Try" doc:id="898e7c6f-dc4e-443d-9fd8-e6a43734b25b" >
			<mongo:find-documents doc:name="Find documents" doc:id="da703a03-d143-4a3d-a626-91a8f505d691" config-ref="mdm_db_Config" collectionName="${mongoDb-mdm.parametros.collection-parametro}" fields=",">
				<mongo:query ><![CDATA[#[%dw 2.0
output application/json
---
{ "Tipo_Parametro": attributes.queryParams.parameterType }]]]></mongo:query>
				<mongo:sort-by ><![CDATA[#[%dw 2.0
output application/json
---
{ "_id": -1 }]]]></mongo:sort-by>
			</mongo:find-documents>
			<ee:transform doc:name="Set Body Response" doc:id="0603f46f-fc6e-420d-b2b1-2c478684598d" >
				<ee:message >
					<ee:set-payload ><![CDATA[%dw 2.0
output application/json
---
{
    "_id": payload[0]."_id"["\$oid"] default "",
    Tipo_Parametro: payload[0].Tipo_Parametro default "",
    Fecha_Creacion: payload[0].Fecha_Creacion default "",
    Fecha_Modificacion: payload[0].Fecha_Modificacion default "",
    Usuario_Creacion: payload[0].Usuario_Creacion default "",
    Usuario_Modificacion: payload[0].Usuario_Modificacion default "",
    Actualizacion_Extractor: payload[0].Actualizacion_Extractor default "",
    Valores: (payload[0].Valores default []) map (v) -> {
        Codigo: v.Codigo default "",
        Nombre: v.Nombre default "",
        Descripcion: v.Descripcion default ""
    }
}]]></ee:set-payload>
				</ee:message>
			</ee:transform>
			<error-handler >
				<on-error-continue enableNotifications="true" logException="true" doc:name="On Error Continue" doc:id="7950959c-1a2f-49d1-81be-ad04f4dd3241" type="ANY">
					<ee:transform doc:name="Set Response Fail Body" doc:id="a8d7a1f9-65c7-40ba-bda8-fa8e7123ea18" >
						<ee:message >
							<ee:set-payload ><![CDATA[%dw 2.0
output application/json
---
{
	codigo: "500",
	mensaje: error.description
}]]></ee:set-payload>
						</ee:message>
					</ee:transform>
					<set-variable value="500" doc:name="Set http status code" doc:id="84c8a5c8-822e-4b94-be1a-5f81e7eb7276" variableName="httpStatus" />
				</on-error-continue>
			</error-handler>
		</try>
	</sub-flow>
</mule>
