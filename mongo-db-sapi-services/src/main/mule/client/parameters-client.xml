}
]]></ee:set-payload>
				</ee:message>
			</ee:transform>
					<error-handler>
				<on-error-continue enableNotifications="true" logException="true" doc:name="On Error Continue" doc:id="38653de7-004d-4ee8-b661-bf529610889f" type="ANY">
							<ee:transform doc:name="Set Response Fail Body" doc:id="d9d7e0e2-d5d0-4d68-bbe4-dab8c418d29d">
						<ee:message>
							<ee:set-payload><![CDATA[%dw 2.0
output application/json
---
{
	codigo: "500",
	mensaje: error.description
}]]></ee:set-payload>
						</ee:message>
					</ee:transform>
							<set-variable value="500" doc:name="Set http status code" doc:id="c99d5aaa-93ee-40cc-9746-f15c977e4f1c" variableName="httpStatus" />
				</on-error-continue>
			</error-handler>
		</try>
			</when>
			<otherwise >
