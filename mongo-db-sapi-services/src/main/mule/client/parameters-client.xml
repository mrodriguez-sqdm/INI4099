					<ee:message >
						<ee:set-payload ><![CDATA[%dw 2.0
output application/json
---
{
	code: "400",
	message: "debe enviar al menos un parametro para la consulta"
	
}]]></ee:set-payload>
					</ee:message>
				</ee:transform>
				<set-variable value="400" doc:name="Set status code" doc:id="a65727a2-b077-46c3-82d8-34620d1626e6" variableName="httpStatus" />
			</otherwise>
		</choice>
	</sub-flow>
</mule>
