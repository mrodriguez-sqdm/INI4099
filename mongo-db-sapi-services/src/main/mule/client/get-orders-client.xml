			<ee:message >
				<ee:set-payload ><![CDATA[%dw 2.0
output application/json
---
if(isEmpty(payload))
{
  "status": 404,
  "code": "NOT_FOUND",
  "message": {
    "message": ""
  },
  "messageServer": "Data not found",
  "cause": [
    {
      "origin": app.name,
      "message": "org.mule.extension.http.api.exception.NotFoundExcecption"
    }
  ]
}
else
payload[0] -'_id']]></ee:set-payload>
			</ee:message>
			<ee:variables >
				<ee:set-variable variableName="httpStatus" ><![CDATA[%dw 2.0
output application/java
---
if(isEmpty(payload)) 404 else 200]]></ee:set-variable>
			</ee:variables>
		</ee:transform>
		<async doc:name="Async" doc:id="7ffbe2cf-c48a-4ac7-b912-475c9536925f" >
			<flow-ref doc:name="Logger after" doc:id="0499ce9a-4652-4042-98fb-61cb3620fae8" name="loggin-client-call" />
